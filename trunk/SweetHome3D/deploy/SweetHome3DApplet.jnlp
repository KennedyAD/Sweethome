<?xml version="1.0"?>
<jnlp spec="1.5+" 
      href="SweetHome3DApplet.jnlp">
  <information>
    <title>Sweet Home 3D Applet</title>
    <vendor>eTeks</vendor>
    <homepage href="http://sweethome3d.sourceforge.net/"/>
  </information>

  <security>
    <all-permissions/>
  </security>

  <resources>
    <j2se version="1.5+" max-heap-size="384m"/>
    <jar href="lib/SweetHome3DApplet.jar"/>
    <jar href="lib/Loader3DS1_2.jar"/>
    <property name="apple.awt.graphics.UseQuartz" value="true"/>
    <property name="sun.swing.enableImprovedDragGesture" value="true"/>
  </resources>
 
  <resources os="Windows">
    <jar href="lib/windows/java3d.jar"/>
  </resources>
  <resources os="Mac OS X">
    <jar href="lib/macosx/java3d.jar"/>
  </resources>
  <resources os="Linux" arch="i386">
    <jar href="lib/linux/i386/java3d.jar"/>
  </resources>
  <resources os="SunOS" arch="x86">
    <extension href="http://download.java.net/media/java3d/webstart/release/java3d-1.5-latest.jnlp"/>
  </resources>
  <resources os="SunOS" arch="sparc">
    <extension href="http://download.java.net/media/java3d/webstart/release/java3d-1.5-latest.jnlp"/>
  </resources>
  
  <applet-desc main-class="com.eteks.sweethome3d.applet.SweetHome3DApplet" 
               name="Sweet Home 3D Applet" width="800" height="600"/>
</jnlp>