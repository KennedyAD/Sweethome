    <!-- Add viewHome.js GNU GPL header to viewhome.min.js -->
    <concat destfile="dist/viewhome.min.js" encoding="UTF-8">
      <header file="src/viewHome.js" />
      <filterchain>
        <headfilter lines="19" />
        <tokenfilter>
