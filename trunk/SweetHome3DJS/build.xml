    </path>
    <property name="yuicompressor.jar" refid="yuicompressor.jar" />
    <!-- Minify Javascript files -->
    <java jar="${yuicompressor.jar}" fork="true" failonerror="true">
      <arg value="dist/build/viewmodel.min.js" />
      <arg value="-o" />
